{
  "name": "react-redux-cordova-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React/Redux Application with Cordova",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server",
    "watch": "./node_modules/.bin/webpack --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Lauren Settle",
  "license": "ISC",
  "dependencies": {
    "style-loader": "^0.20.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.9",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "expose-loader": "^0.7.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "history": "^4.7.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "normalize.less": "^1.0.0",
    "phantomjs-polyfill": "0.0.2",
    "prop-types": "^15.6.0",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "source-map": "^0.7.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "process": false,
      "require": false,
      "define": false,
      "console": false
    },
    "rules": {
      "camelcase": 0,
      "comma-dangle": 2,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "indent": [
        2,
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        2,
        200,
        2
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Server",
            "Router",
            "Ajv"
          ]
        }
      ],
      "no-mixed-requires": [
        0
      ],
      "no-underscore-dangle": [
        0
      ],
      "no-caller": 2,
      "no-console": 0,
      "no-mixed-spaces-and-tabs": [
        "error",
        "smart-tabs"
      ],
      "no-multiple-empty-lines": 0,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "args": "none"
        }
      ],
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "no-var": 2,
      "padded-blocks": 0,
      "quotes": [
        2,
        "single"
      ],
      "react/display-name": 0,
      "react/jsx-equals-spacing": [
        2,
        "never"
      ],
      "react/jsx-indent": [
        2,
        "tab"
      ],
      "react/jsx-indent-props": [
        2,
        "tab"
      ],
      "react/jsx-pascal-case": 2,
      "react/jsx-wrap-multilines": [
        2,
        {
          "declaration": true,
          "assignment": true,
          "return": true
        }
      ],
      "react/react-in-jsx-scope": 2,
      "react/sort-comp": [
        2,
        {
          "order": [
            "static-methods",
            "lifecycle",
            "/^on.+$/",
            "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
            "everything-else",
            "/^render.+$/",
            "render"
          ]
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        {
          "anonymous": "always",
          "named": "never"
        }
      ],
      "strict": [
        2,
        "never"
      ],
      "wrap-iife": [
        2,
        "inside"
      ]
    },
    "plugins": [
      "react"
    ]
  }
}
